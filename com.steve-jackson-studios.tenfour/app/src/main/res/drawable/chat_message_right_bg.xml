<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:right="9dp">
        <shape android:shape="rectangle" >
            <solid android:color="#20000000" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:top="30dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/callout_secondary" />
            </shape>
        </rotate>
    </item>
    <item
        android:right="10dp"
        android:bottom="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/callout_secondary" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:right="10dp"
        android:height="28dp"
        android:gravity="bottom">
        <shape android:shape="rectangle" >
            <gradient android:angle="90" android:endColor="#10000000" android:startColor="#00000000" android:type="linear" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>