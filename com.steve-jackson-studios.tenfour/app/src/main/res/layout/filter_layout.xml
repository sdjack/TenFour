<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="?attr/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/filter_header"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/tenfour_dark"
        android:clickable="true">

        <TextView
            android:id="@+id/filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/filters_title_map"
            android:textColor="@color/secondary"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/filter_divider_1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/filter_header"
        android:background="?attr/colorPrimary" />

    <LinearLayout
        android:id="@+id/filter_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_divider_1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">

            <Switch
                android:id="@+id/filter_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"/>

            <Button
                android:id="@+id/filter_optiontitle_1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingStart="8dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/filter_option_1"
                android:gravity="start|center_vertical"
                android:background="@drawable/invisible"
                android:text="@string/filters_heatmap"
                android:textColor="@color/secondary_text_faded"
                android:textSize="14sp"
                android:textStyle="normal"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">
            <Switch
                android:id="@+id/filter_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"/>

            <Button
                android:id="@+id/filter_optiontitle_2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingStart="8dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/filter_option_2"
                android:gravity="start|center_vertical"
                android:background="@drawable/invisible"
                android:text="@string/filters_friendmap"
                android:textColor="@color/secondary_text_faded"
                android:textSize="14sp"
                android:textStyle="normal"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">
            <Switch
                android:id="@+id/filter_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"/>

            <Button
                android:id="@+id/filter_optiontitle_3"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingStart="8dp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/filter_option_3"
                android:gravity="start|center_vertical"
                android:background="@drawable/invisible"
                android:text="@string/filters_stickers"
                android:textColor="@color/secondary_text_faded"
                android:textSize="14sp"
                android:textStyle="normal"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>