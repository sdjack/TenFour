<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.maps.android.ui.RotationLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="42dip"
                android:minHeight="26dip"
                android:paddingStart="6dip"
                android:paddingBottom="4dip"
                android:background="@drawable/map_bubble_body"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:visibility="visible"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:layout_below="@+id/body"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-3.5dip"
                android:background="@drawable/map_bubble_tail"/>

        </RelativeLayout>

    </com.google.maps.android.ui.RotationLayout>

</LinearLayout>