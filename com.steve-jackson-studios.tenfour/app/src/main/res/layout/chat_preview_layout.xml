<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/preview_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F000000"
        android:clickable="false"
        android:visibility="visible">

        <ImageView
            android:id="@+id/preview_menu_highlight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"
            android:background="@drawable/ic_menu_highlight"
            android:clickable="false"/>

        <RelativeLayout
            android:layout_width="318dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/preview_menu_highlight"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:paddingStart="10dip"
                android:paddingBottom="8dip"
                android:paddingTop="5dip"
                android:paddingEnd="5dip"
                android:background="@drawable/map_preview_body">

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#00000000"
                    android:stackFromBottom="true"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginTop="197dip"
                android:layout_marginStart="143dip"
                android:background="@drawable/map_preview_tail"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>