<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/preview_avatar_aura"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_margin="4dip"
        android:background="@drawable/background_aura">

        <TextView
            android:id="@+id/preview_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:background="@drawable/background_avatar"
            android:textColor="#fff"
            android:text="U"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/preview_avatar_aura"
        android:layout_margin="4dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/preview_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/preview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preview_media"
            android:padding="0dp"
            android:text="@string/string_placeholder"
            android:textSize="16sp"
            android:textColor="@color/primary_text_faded"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>